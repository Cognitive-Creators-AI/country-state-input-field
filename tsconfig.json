{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "types": ["node", "react"]
    },
    "include": ["src/**/*", "src/**/*.json"],
    "exclude": ["node_modules", "dist"]
}
